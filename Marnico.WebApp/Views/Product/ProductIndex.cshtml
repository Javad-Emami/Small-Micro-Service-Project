@model IEnumerable<Marnico.WebApp.Model.ProductDto>

    <br/>
    <br/>
    <div class="container p-4 border">
        <div class="row pb-2">
            <div class="col">
                <h2 class="text-info">Product List</h2>
            </div>
              <div class="col text-end pt-1">
                  <a asp-action="ProductCreate" class="btn btn-primary">Create</a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        @((item.Price).ToString("c"))
                    </td>
                    <td>
                        <a asp-action="ProductUpdate" class="btn btn-warning" asp-route-productId ="@item.ProductId" style="padding: 6px 12px;">Edit</a>
                        <a asp-action="ProductDelete" class="btn btn-danger" asp-route-productId ="@item.ProductId" style="padding: 6px 12px;">Delete</a>
                    </td>                  
                </tr>
            }
        </tbody>
        </table>
    </div>